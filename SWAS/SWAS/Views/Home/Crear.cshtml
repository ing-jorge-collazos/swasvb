@model SWAS.Models.Usuarios

@{
    ViewData["Title"] = "Crear usuarios";
}

<h1 class="text-center">Usuarios en plataforma</h1>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Home" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa fa-plus" aria-hidden="true"></i> Nuevo usuario
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Crear nuevo usuario</strong></h3>
            </div>
            <div class="card-body">
            <form asp-action="Crear" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>





            </div>
        </div>
    </div>
</div>